{
  "name": "GJU Plans",
  "dockerComposeFile": [
    "docker-compose.dev.yaml"
  ],
  "service": "dev",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",

  "forwardPorts": [
    8080,
    5173,
    4321
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        "astro-build.astro-vscode"
      ]
    }
  },

  "postCreateCommand": "npm install && cd services/backend && ./mvnw dependency:go-offline && echo \"Your development environment is ready!\""
}